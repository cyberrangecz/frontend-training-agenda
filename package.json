{
    "name": "training-agenda",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint && npm run prettier-check",
        "e2e": "ng e2e",
        "ci-test": "ng test --browsers ChromeHeadless --watch=false",
        "prettier-check": "prettier --check \"projects/**/*.ts\"",
        "prettier-fix": "prettier --write \"./projects/**/*.ts\"",
        "build-example-app": "ng build training-agenda-example-app --configuration production",
        "build-library": "ng build training-agenda --configuration production",
        "create-package": "cd dist/training-agenda && npm pack",
        "copy-static-files": "cp LICENSE dist/training-agenda && echo \"\n---\nSources: $(git remote get-url origin)\" >> dist/training-agenda/README.md",
        "build-and-pack": "npm install && npm run build-library && npm run ci-trim-package && npm run copy-static-files && npm run create-package",
        "ci-update-version": "cd projects/training-agenda/ && npm version $TAG_VERSION",
        "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run copy-static-files && npm run create-package",
        "ci-publish-package": "cd dist/training-agenda && npm publish --provenance=false --access public",
        "ci-trim-package": "tr -d \"[:space:]\" < dist/training-agenda/package.json > /tmp/temp-package.json && mv /tmp/temp-package.json dist/training-agenda/package.json",
        "prepare": "husky"
    },
    "dependencies": {
        "@angular/animations": "^18.2.13",
        "@angular/cdk": "^18.2.13",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.13",
