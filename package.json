        "@angular/forms": "^18.2.13",
        "@angular/material": "^18.2.13",
        "@angular/platform-browser": "^18.2.13",
        "@angular/platform-browser-dynamic": "^18.2.13",
        "@angular/router": "^18.2.13",
        "@danielmoncada/angular-datetime-picker": "^18.1.0",
        "@hpcc-js/wasm": "^2.22.1",
        "@crczp/adaptive-instance-simulator": ">=0.0.1",
        "@crczp/assessments-results-visualization": ">=0.0.1",
        "@crczp/command-visualizations": ">=0.0.1",
        "@crczp/d3-service": ">=0.0.1",
        "@crczp/hurdling-visualization": ">=0.0.1",
        "@crczp/sandbox-api": ">=0.0.1",
        "@crczp/sandbox-model": ">=0.0.1",
        "@crczp/training-api": ">=0.0.1",
        "@crczp/training-model": ">=0.0.1",
        "@crczp/overview-visualization": ">=0.0.1",
